<h1>Simple Chatroom</h1>
<%= form_with(url: '/chatroom/speak', method: :post, remote: true) do |form| %>
    <label>Say: </label>
    <%= form.text_field :speak_content %>
    <%= form.submit :Send %>
<% end %>
<% @messages.each do |m| %>
    <p><%= m.content %></p>
<% end %>


<div id="chat-records">
</div>

